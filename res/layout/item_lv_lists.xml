<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <CheckBox
        android:id="@+id/chb_project_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />
    <ImageView
        android:id="@+id/img_project_list_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_launcher" />
    
    <ImageView 
        android:id="@+id/img_project_list_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_project_list_menu"
        android:src="@drawable/ic_launcher"/>
    
    <TextView
        android:id="@+id/tv_project_list_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/chb_project_list"
        android:layout_toLeftOf="@+id/img_project_list_priority"
        android:text="Name of the list" />
    

</RelativeLayout>
