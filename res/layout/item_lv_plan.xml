<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/tv_project_plan_task_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dp"
        android:text="1." />
    
    <ImageView
        android:id="@+id/img_project_plan_task_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_launcher"
        android:contentDescription="menu" />
    
    <TextView
        android:id="@+id/tv_project_plan_task_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/tv_project_plan_task_num"
        android:layout_toLeftOf="@+id/img_project_plan_task_menu"
        android:text="some actions" />
    

</RelativeLayout>
