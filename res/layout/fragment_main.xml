<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_bg2"
        android:scaleType="fitXY"
        android:contentDescription="@string/main_bg"/>	

    <ImageButton
        android:id="@+id/btn_projects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/projects"
        android:padding="@dimen/main_btns_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_projects" />

</RelativeLayout>
