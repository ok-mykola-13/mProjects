<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingTop="15dp" >
    
    <TextView
        android:id="@+id/tv_plan_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="15dp"
        android:text="@string/plan_title"
        android:textSize="@dimen/fragment_title_font" />
    <ImageView
        android:id="@+id/img_edit_plan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/add"
        android:scaleType="fitCenter" />   
        
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/lv_plan"
        android:background="#ccc" />
    
    <ListView
        android:id="@+id/lv_plan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_plan_title"
        android:paddingTop="15dp"
    	android:background="@drawable/bg_pattern" />

</RelativeLayout>
